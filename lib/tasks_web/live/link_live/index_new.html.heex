<h1
class="grow text-2xl font-bold"
>Create a new link</h1>

<.form for={@form} phx-submit="submit">
  <div class="flex gap-2 items-end">
    <div class="grow">
      <.input field={@form[:url]} type="text" label="URL"/>
    </div>

    <button
    class="bg-black border border-black text-white hover:bg-gray-700 font-bold py-2 px-3 rounded-md"
    >
      Create
    </button>
  </div>
</.form>